<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dk.aau.cs.giraf.zebra"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:logo="@drawable/icon">
        <activity
            android:name="dk.aau.cs.giraf.zebra.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!-- This should be the ONLY .LAUNCHER! Otherwise you get two icons for the app when compiling.
                     If this still happens, check the dependencies. Any .LAUNCHER there will cause the same error. -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dk.aau.cs.giraf.zebra.SequenceActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>

    </application>

</manifest>