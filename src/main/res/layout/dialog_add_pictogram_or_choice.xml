<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_pictogram_or_choice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    tools:context="AddEditSequencesActivity">

    <dk.aau.cs.giraf.gui.GirafButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/giraf_button_height"
        android:layout_marginRight="@dimen/padding_standard"
        android:onClick="getPictogramClick"
        app:icon="@drawable/icon_accept"
        app:text="@string/pictogram" />

    <dk.aau.cs.giraf.gui.GirafButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/giraf_button_height"
        android:onClick="getChoiceClick"
        app:icon="@drawable/icon_choose"
        app:text="@string/choice" />

</LinearLayout>