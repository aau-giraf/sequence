<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/copying_sequences"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:svg="http://schemas.android.com/apk/res/dk.aau.cs.giraf.zebra"
    android:layout_width="750dp"
    android:layout_height="650dp"
    android:orientation="vertical"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/headline_copy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/popup_copy_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textSize="60dp"
            android:textStyle="bold"
            android:text="Kopier Sekvenser"
            android:layout_centerInParent="true"
            android:layout_marginTop="15dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lists_copy"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="horizontal">

        <dk.aau.cs.giraf.gui.GGridView
            android:id="@+id/existing_sequences"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:numColumns="3"
            android:listSelector="#00000000"
            android:fadeScrollbars="false">
        </dk.aau.cs.giraf.gui.GGridView>

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/gdialogcolorselect_arrow_right"
            android:layout_gravity="center_vertical"
            />

        <dk.aau.cs.giraf.gui.GGridView
            android:id="@+id/empty_sequences"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:numColumns="3"
            android:listSelector="#00000000"
            android:fadeScrollbars="false">
        </dk.aau.cs.giraf.gui.GGridView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttons_copy"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/white_thingy_two"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>

        <dk.aau.cs.giraf.gui.GButton
            android:id="@+id/popup_copy_accept"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Kopier til"
            android:layout_alignRight="@id/white_thingy_two"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            />

        <dk.aau.cs.giraf.gui.GButton
            android:id="@+id/popup_copy_back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Afslut"
            android:layout_alignLeft="@+id/white_thingy_two"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            />

    </RelativeLayout>

</LinearLayout>